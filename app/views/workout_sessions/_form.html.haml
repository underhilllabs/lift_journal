= form_for @workout_session do |f|
  - if @workout_session.errors.any?
    #error_explanation
      %h2= "#{pluralize(@workout_session.errors.count, "error")} prohibited this workout_session from being saved:"
      %ul
        - @workout_session.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :when
    = f.date_select :when
  .field
    = f.label :start_time
    = f.datetime_select :start_time
  .field
    = f.label :end_time
    = f.datetime_select :end_time
  .actions
    = f.submit 'Save'
